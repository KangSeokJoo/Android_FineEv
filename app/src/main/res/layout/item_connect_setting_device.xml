<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/MainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:weightSum="4"
        android:gravity="center"
        >

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="충전기 1"
        android:id="@+id/charge1"
        android:textColor="#000000"
        android:textSize="18dp"
        android:layout_marginLeft="15dp"
        />

    <TextView
        android:gravity="right"
        android:layout_width="60dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="BLE-821E"
        android:id="@+id/bleName"
        android:textColor="#000000"
        android:textSize="18dp"
        android:singleLine="true"
        android:ellipsize="end"
        />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center"
            >
            <ImageView
                android:layout_width="35dp"
                android:layout_height="15dp"
                android:background="@drawable/icon_linked"
                android:id="@+id/idLinked"
                app:layout_constraintLeft_toRightOf="@id/bleName"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tvDel"
                />
        </LinearLayout>

        <TextView
            android:gravity="right"
            android:layout_marginRight="15dp"
        android:id="@+id/tvDel"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="삭제"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="18dp"
        />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bdbdbd"
        />

