<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="#ffffff">


    <TextView
        android:id="@+id/topTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="내 충전내역 내보내기"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btnClose"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnClose"
        app:layout_constraintVertical_bias="0" />
    
    <Button
        android:id="@+id/btnClose"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/icon_close"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="1"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        />

    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/btnKaKao"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/icon_kakaotalk"
        app:layout_constraintTop_toBottomOf="@id/topTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btnMail"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="카카오톡\n내보내기"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/btnKaKao"
        app:layout_constraintRight_toRightOf="@id/btnKaKao"
        app:layout_constraintTop_toBottomOf="@id/btnKaKao"
        app:layout_constraintVertical_bias="0"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="5dp"
        />

    <Button
        android:id="@+id/btnMail"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/icon_mail"
        app:layout_constraintBottom_toBottomOf="@+id/btnKaKao"
        app:layout_constraintLeft_toRightOf="@id/btnKaKao"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnKaKao" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="메일로\n내보내기"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/btnMail"
        app:layout_constraintRight_toRightOf="@id/btnMail"
        app:layout_constraintTop_toBottomOf="@id/btnMail"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="5dp"
        />



    
</androidx.constraintlayout.widget.ConstraintLayout>