<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.SignInActivity"
    android:background="@drawable/gradation">

    <EditText
        android:id="@+id/Pass_EDT1"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textFontWeight="400"
        app:layout_constraintHorizontal_bias="0.5"
        android:fontFamily="@font/snsfont"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="이메일"
        android:inputType="textEmailAddress"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/Pass_EDT2"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textFontWeight="400"
        app:layout_constraintHorizontal_bias="0.5"
        android:fontFamily="@font/snsfont"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="이용중인 비밀번호"
        app:layout_constraintEnd_toEndOf="@id/Pass_EDT1"
        app:layout_constraintStart_toStartOf="@id/Pass_EDT1"
        app:layout_constraintTop_toBottomOf="@id/Pass_EDT1"/>

    <EditText
        android:id="@+id/Pass_EDT3"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textFontWeight="400"
        app:layout_constraintHorizontal_bias="0.5"
        android:fontFamily="@font/snsfont"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="새 비밀번호"
        app:layout_constraintEnd_toEndOf="@id/Pass_EDT2"
        app:layout_constraintStart_toStartOf="@id/Pass_EDT2"
        app:layout_constraintTop_toBottomOf="@id/Pass_EDT2" />
    <EditText
        android:id="@+id/Pass_EDT4"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textFontWeight="400"
        app:layout_constraintHorizontal_bias="0.5"
        android:fontFamily="@font/snsfont"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="새 비밀번호 확인"
        app:layout_constraintEnd_toEndOf="@id/Pass_EDT3"
        app:layout_constraintStart_toStartOf="@id/Pass_EDT3"
        app:layout_constraintTop_toBottomOf="@id/Pass_EDT3" />



    <Button
        android:id="@+id/Pass_BTNSubmit"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:textColor="#ffffff"
        android:textFontWeight="400"
        android:fontFamily="@font/snsfont"
        android:text="확인"
        android:background="@color/main_blue"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintTop_toBottomOf="@id/Pass_EDT4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>